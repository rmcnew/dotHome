startup_message off
termcapinfo term* ti@:te@
term xterm
altscreen on
vbell off
defscroolback 50000
defutf8 on
hardstatus alwayslastline
hardstatus string "%{= kw}%-w{w= bW}%50>%n %t%{-}%+w%<"
activity "Activity in %t(%n)"
nonblock on
nethack on
multiuser on
shelltitle "zsh"
escape ``
bind h prev
bind l next
## do not trash backspace
bindkey -k kb
bindkey -d -k kb
## do not trash delete
bindkey -k kD
bindkey -d -k kD
# remove flow control bindings
bind ^Q
bind q
bind ^S
bind s
# create default windows
screen -t zsh zsh
screen -t zsh zsh
screen -t zsh zsh
screen -t zsh zsh
screen -t zsh zsh
screen -t zsh zsh
screen -t zsh zsh
screen -t zsh zsh
screen -t zsh zsh
screen -t zsh zsh
select 0
